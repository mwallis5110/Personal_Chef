<section class="card col-6">
  <h3>{{title}}</h3>
  <div class="image-container">
    <img src="/images/{{filename}}">
    <button class="saveButton" data-image="{{filename}}" data-title="{{title}}" data-id="{{id}}"
      data-ingredients="{{ingredients}}" data-directions="{{directions}}">Save This Recipe</button>
  </div>
  <div class="row align-items-start">
    <div class="col">
      <p><strong> Ingredients: </strong><br>
        {{!-- {{ingredients}} --}}

        {{#each ingredients as |ingredient|}}
        <input type="checkbox" class="custom-checkbox">{{ingredient}}</input><br>
        {{/each}}
      </p>
    </div>
    <br>
    <div class="col">
      <p> <strong> Directions: </strong><br>
        {{!-- {{ directions}} --}}
        {{#each directions as |direction|}}
        <input type="checkbox" class="custom-checkbox">{{direction}}</input><br>
        {{/each}}
      </p>
    </div>
</section>